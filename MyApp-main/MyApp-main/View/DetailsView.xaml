<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodel="clr-namespace:MyApp.ViewModel"
             xmlns:model="clr-namespace:MyApp.Model" 
             x:Class="MyApp.View.DetailsView"             
             x:DataType="viewmodel:DetailsViewModel"
             Title="Product Details">

    <Grid>
        <!-- Définition des lignes pour organiser l'affichage -->
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <!-- Formulaire prend le reste de l'écran -->
        </Grid.RowDefinitions>

        <!-- Image de fond -->
        <Image Source="background.png"
               Aspect="AspectFill"
               Opacity="0.3"
               Grid.RowSpan="2"/>

        <!-- Conteneur principal -->
        <ScrollView Grid.Row="1">
            <VerticalStackLayout Padding="30" Spacing="15"
                                 BackgroundColor="#F0F0F0" Opacity="0.9"
                                 WidthRequest="500"
                                 HeightRequest="500"
                                 HorizontalOptions="Center"
                                 VerticalOptions="Center">
                <Label Text="Add product"
                       FontSize="24"
                       FontAttributes="Bold"
                       HorizontalOptions="Center"/>

                <Grid ColumnDefinitions="Auto, *" RowDefinitions="Auto,Auto,Auto,Auto,Auto" RowSpacing="5">
                    <!-- Id -->
                    <Label Text="Id :" Grid.Row="0" VerticalOptions="Center" HorizontalOptions="Start" Margin="0,0,0,5"/>
                    <Entry Text="{Binding Id}" Grid.Column="1" Grid.Row="0" WidthRequest="250" Margin="0,0,0,5"/>

                    <!-- Nom -->
                    <Label Text="Nom :" Grid.Row="1" VerticalOptions="Center" HorizontalOptions="Start" Margin="0,0,0,5"/>
                    <Entry Text="{Binding Name}" Grid.Column="1" Grid.Row="1" WidthRequest="250" Margin="0,0,0,5"/>

                    <!-- Groupe -->
                    <Label Text="Groupe :" Grid.Row="2" VerticalOptions="Center" HorizontalOptions="Start" Margin="0,0,0,5"/>
                    <Entry Text="{Binding Group}" Grid.Column="1" Grid.Row="2" WidthRequest="250" Margin="0,0,0,5"/>

                    <!-- Stock -->
                    <Label Text="Stock :" Grid.Row="3" VerticalOptions="Center" HorizontalOptions="Start" Margin="0,0,0,5"/>
                    <Entry Text="{Binding Stock}" Grid.Column="1" Grid.Row="3" Keyboard="Numeric" WidthRequest="250" Margin="0,0,0,5"/>

                    <!-- Prix -->
                    <Label Text="Prix :" Grid.Row="4" VerticalOptions="Center" HorizontalOptions="Start" Margin="0,0,0,5"/>
                    <Entry Text="{Binding Price}" Grid.Column="1" Grid.Row="4" Keyboard="Numeric" WidthRequest="250" Margin="0,0,0,5"/>
                </Grid>


                <Button x:Name="MyAnimatedButton"
                        Text="Valider"
                        Command="{Binding ChangeObjectParametersCommand}"
                        BackgroundColor="#6200EE"
                        TextColor="White"
                        WidthRequest="120"
                        HorizontalOptions="Center"
                        Clicked="MyAnimatedButton_Clicked"/>
            </VerticalStackLayout>
        </ScrollView>
    </Grid>

</ContentPage>
