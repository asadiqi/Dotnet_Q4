<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodel="clr-namespace:MyApp.ViewModel"
             xmlns:model="clr-namespace:MyApp.Model" 
             x:Class="MyApp.View.DetailsView"             
             x:DataType="viewmodel:DetailsViewModel"
             Title="Product Management">

    <Grid>
        <!-- Définition des lignes pour organiser l'affichage -->
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Image de fond -->
        <Image Source="background.png"
               Aspect="AspectFill"
               Opacity="0.3"
               Grid.RowSpan="2"/>

        <!-- Conteneur principal -->
        <ScrollView Grid.Row="1">
            <VerticalStackLayout Padding="30" Spacing="15"
                                 BackgroundColor="#F0F0F0" Opacity="0.9"
                                 WidthRequest="500"
                                 HeightRequest="700"
                                 HorizontalOptions="Center"
                                 VerticalOptions="Center">

                <Label Text="Product Details"
                       FontSize="24"
                       FontAttributes="Bold"
                       HorizontalOptions="Center"/>

                <Grid ColumnDefinitions="Auto, *" RowDefinitions="Auto,Auto,Auto,Auto,Auto,Auto" RowSpacing="5">
                    <!-- Id -->
                    <Label Text="Id * :" Grid.Row="0" VerticalOptions="Center" HorizontalOptions="Start" Margin="0,0,0,5"/>
                    <Entry Text="{Binding Id}" Grid.Column="1" Grid.Row="0" WidthRequest="250" Margin="0,0,0,5"/>

                    <!-- Nom -->
                    <Label Text="Name * :" Grid.Row="1" VerticalOptions="Center" HorizontalOptions="Start" Margin="0,0,0,5"/>
                    <Entry Text="{Binding Name}" Grid.Column="1" Grid.Row="1" WidthRequest="250" Margin="0,0,0,5"/>

                    <!-- Groupe -->
                    <Label Text="Group * :" Grid.Row="2" VerticalOptions="Center" HorizontalOptions="Start" Margin="0,0,0,5"/>
                    <Entry Text="{Binding Group}" Grid.Column="1" Grid.Row="2" WidthRequest="250" Margin="0,0,0,5"/>

                    <!-- Stock -->
                    <Label Text="Stock * :" Grid.Row="3" VerticalOptions="Center" HorizontalOptions="Start" Margin="0,0,0,5"/>
                    <Entry Text="{Binding Stock}" Grid.Column="1" Grid.Row="3" Keyboard="Numeric" WidthRequest="250" Margin="0,0,0,5"/>

                    <!-- Prix -->
                    <Label Text="Price * :" Grid.Row="4" VerticalOptions="Center" HorizontalOptions="Start" Margin="0,0,0,5"/>
                    <Entry Text="{Binding Price}" Grid.Column="1" Grid.Row="4" Keyboard="Numeric" WidthRequest="250" Margin="0,0,0,5"/>

                    <!-- Label Image (déjà existant) -->
                    <Label Text="Clickable Image:" Grid.Row="5" VerticalOptions="Center" HorizontalOptions="Start" Margin="0,0,0,5"/>

                    <!-- Border cliquable autour de l'image -->
                    <Border Grid.Row="5" Grid.Column="1" WidthRequest="200" HeightRequest="100" Stroke="Black" StrokeThickness="1" Background="White" Margin="0,0,0,20" HorizontalOptions="Center" VerticalOptions="Center" StrokeShape="RoundRectangle 10">
                        <Border.GestureRecognizers>
                            <TapGestureRecognizer Command="{Binding SelectImageCommand}" />
                        </Border.GestureRecognizers>
                        <Image Source="{Binding Picture}" Aspect="AspectFit" HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand"/>
                    </Border>
                </Grid>

                <!-- Bouton de soumission -->
                <Button x:Name="MyAnimatedButton"
                        Text="Submit"
                        Command="{Binding SubmitProductCommand}"
                        BackgroundColor="#6200EE"
                        TextColor="White"
                        WidthRequest="120"
                        HorizontalOptions="Center"
                        HeightRequest="50"
                        CornerRadius="25"
                        FontSize="16"/>
            </VerticalStackLayout>
        </ScrollView>
    </Grid>
</ContentPage>
