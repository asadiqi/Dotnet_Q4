<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodel="clr-namespace:MyApp.ViewModel"
             xmlns:model="clr-namespace:MyApp.Model"
             x:Class="MyApp.View.AllProductsView"
             x:DataType="viewmodel:MainViewModel">

    <ScrollView>
        <StackLayout Padding="20">
            <!-- Bouton retour -->
            <Button Text="Retour" Clicked="OnBackButtonClicked" />

            <!-- CollectionView pour afficher les produits -->
            <CollectionView ItemsSource="{Binding MyObservableList}"
                            SelectionMode="None">
                <CollectionView.ItemsLayout>
                    <GridItemsLayout Orientation="Vertical"
                                     Span="2"
                                     HorizontalItemSpacing="10"
                                     VerticalItemSpacing="10" />
                </CollectionView.ItemsLayout>
                <CollectionView.ItemTemplate>
                    <DataTemplate x:DataType="model:Product">
                        <Border StrokeThickness="4"
                                StrokeShape="RoundRectangle 10,10,10,10"
                                Padding="10">
                            <Grid HeightRequest="100" ColumnDefinitions="0.5*,*">
                                <ImageButton Grid.Column="0"
                                             Source="{Binding Picture}"
                                             HorizontalOptions="Start"
                                             Aspect="AspectFit"
                                             HeightRequest="100"
                                             Command="{Binding Source={RelativeSource AncestorType={x:Type viewmodel:MainViewModel}}, Path=GoToDetailsCommand}"
                                             CommandParameter="{Binding Id}"
                                             IsEnabled="{Binding Source={RelativeSource AncestorType={x:Type viewmodel:MainViewModel}}, Path=IsNotBusy}" />

                                <VerticalStackLayout Grid.Column="1">
                                    <Label Text="{Binding Path=Id, StringFormat='ID: {0:S2}'}"
                                           Style="{StaticResource SubHeadline}"
                                           FontSize="15"
                                           HorizontalOptions="Start"
                                           VerticalOptions="Center" />
                                    <Label Text="{Binding Path=Name, StringFormat='Name: {0:S10}'}"
                                           Style="{StaticResource SubHeadline}"
                                           FontSize="15"
                                           HorizontalOptions="Start"
                                           VerticalOptions="Center" />
                                    <Label Text="{Binding Path=Group, StringFormat='Group: {0:S10}'}"
                                           Style="{StaticResource SubHeadline}"
                                           FontSize="15"
                                           HorizontalOptions="Start"
                                           VerticalOptions="Center" />
                                    <Label Text="{Binding Path=Stock, StringFormat='Stock: {0} piece'}"
                                           Style="{StaticResource SubHeadline}"
                                           FontSize="15"
                                           HorizontalOptions="Start"
                                           VerticalOptions="Center" />

                                    <Label Text="{Binding Path=Price, StringFormat='Price: {0} â‚¬'}"
                                           Style="{StaticResource SubHeadline}"
                                           FontSize="15"
                                           HorizontalOptions="Start"
                                           VerticalOptions="Center" />
                                </VerticalStackLayout>
                            </Grid>
                        </Border>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </StackLayout>
    </ScrollView>
</ContentPage>
