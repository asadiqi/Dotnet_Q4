<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodel="clr-namespace:MyApp.ViewModel"
             xmlns:model="clr-namespace:MyApp.Model"
             x:Class="MyApp.View.AllProductsView"
             x:DataType="viewmodel:AllProductsViewModel"
             Title="All Products">

    <Grid>
        <!-- Image de fond -->
        <Image Source="background.png"
               Aspect="AspectFill"
               Opacity="0.3"
               Grid.RowSpan="2" />

        <ScrollView>
            <VerticalStackLayout Padding="20" Spacing="15">
                <!-- Une seule barre de recherche pour le nom et le groupe -->
                <SearchBar Placeholder="Rechercher par nom ou groupe"
                   TextChanged="OnSearchTextChanged"
                   HorizontalOptions="FillAndExpand" />

                <Label Text="Liste des produits"
                       FontSize="24"
                       FontAttributes="Bold"
                       HorizontalOptions="Center" />    

                <!-- CollectionView avec mise en page stylée -->
                <CollectionView ItemsSource="{Binding FilteredProducts}"
                        SelectionMode="None">
                    <CollectionView.ItemsLayout>
                        <GridItemsLayout Orientation="Vertical"
                                 Span="2"
                                 HorizontalItemSpacing="10"
                                 VerticalItemSpacing="10" />
                    </CollectionView.ItemsLayout>

                    <CollectionView.ItemTemplate>
                        <DataTemplate x:DataType="model:Product">
                            <Border StrokeThickness="4"
                            StrokeShape="RoundRectangle 10,10,10,10"
                            Padding="10">
                                <Grid HeightRequest="100" ColumnDefinitions="0.5*,*">
                                    <ImageButton Grid.Column="0"
                                         Source="{Binding Picture}"
                                         HorizontalOptions="Start"
                                         Aspect="AspectFit"
                                         HeightRequest="100"
                                         Command="{Binding Source={RelativeSource AncestorType={x:Type viewmodel:AllProductsViewModel}}, Path=GoToDetailsCommand}"
                                         CommandParameter="{Binding Id}"
                                         IsEnabled="{Binding Source={RelativeSource AncestorType={x:Type viewmodel:AllProductsViewModel}}, Path=IsNotBusy}" />
                                    <VerticalStackLayout Grid.Column="1">
                                        <Button Text="Delete"
                                        FontSize="13"
                                        BackgroundColor="#F44336"
                                        TextColor="White"
                                        CornerRadius="5"
                                        Clicked="OnDeleteButtonClicked"
                                        CommandParameter="{Binding Id}" />

                                        <Button Text="Modify"
                                        FontSize="13"
                                        BackgroundColor="#4CAF50"
                                        TextColor="White"
                                        CornerRadius="5"
                                        Clicked="OnModifyButtonClicked"
                                        CommandParameter="{Binding Id}" />              

                                        <Label Text="{Binding Path=Id, StringFormat='ID: {0:S2}'}"
                                       FontSize="15" />
                                        <Label Text="{Binding Path=Name, StringFormat='Name: {0:S10}'}"
                                       FontSize="15" />
                                        <Label Text="{Binding Path=Group, StringFormat='Group: {0:S10}'}"
                                       FontSize="15" />
                                        <Label Text="{Binding Path=Stock, StringFormat='Stock: {0} piece'}"
                                       FontSize="15" />
                                        <Label Text="{Binding Path=Price, StringFormat='Price: {0} €'}"
                                       FontSize="15" />
                                    </VerticalStackLayout>
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>
            </VerticalStackLayout>
        </ScrollView>
    </Grid>
</ContentPage>
