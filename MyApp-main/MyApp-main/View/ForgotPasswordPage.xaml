<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodel="clr-namespace:MyApp.ViewModel"
             xmlns:converters="clr-namespace:MyApp.Converters"
             x:Class="MyApp.View.ForgotPasswordPage"
             x:DataType="viewmodel:ForgotPasswordViewModel"
             BackgroundColor="#f5f6fa">

    <ContentPage.Resources>
        <ResourceDictionary>
            <converters:StringNotEmptyConverter x:Key="StringNotEmptyConverter" />
        </ResourceDictionary>
    </ContentPage.Resources>

    <ScrollView>
        <VerticalStackLayout Padding="30" Spacing="20" VerticalOptions="CenterAndExpand" HorizontalOptions="Center">
            <Border
                BackgroundColor="White"
                Stroke="#dcdde1"
                StrokeThickness="1"
                WidthRequest="340"
                StrokeShape="RoundRectangle">

                <VerticalStackLayout Padding="25" Spacing="20">
                    <!-- Title -->
                    <Label Text="Reset Password"
                           FontSize="28"
                           FontAttributes="Bold"
                           TextColor="#2f3640"
                           HorizontalOptions="Center" />

                    <!-- Email Entry -->
                    <Entry Placeholder="Enter your email"
                           Text="{Binding Email}"
                           Keyboard="Email"
                           BackgroundColor="#f1f2f6"
                           TextColor="#2f3640"
                           HeightRequest="50"
                           FontSize="16" />

                    <!-- Reset Button -->
                    <Button Text="Send reset link"
                            Command="{Binding ResetPasswordCommand}"
                            BackgroundColor="#00a8ff"
                            TextColor="White"
                            FontAttributes="Bold"
                            HeightRequest="50" />

                    <!-- Status message -->
                    <Label Text="{Binding StatusMessage}"
                           TextColor="Red"
                           FontSize="14"
                           HorizontalOptions="Center"
                           IsVisible="{Binding StatusMessage, Converter={StaticResource StringNotEmptyConverter}}" />


                </VerticalStackLayout>
            </Border>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
